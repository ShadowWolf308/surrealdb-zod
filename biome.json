{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"formatter": {
		"enabled": true,
		"lineWidth": 120,
		"attributePosition": "multiline",
		"useEditorconfig": true
	},
	"javascript": {
		"formatter": {
			"attributePosition": "multiline"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useConsistentArrayType": {
					"level": "error",
					"options": {
						"syntax": "shorthand"
					}
				}
			},
			"correctness": {
				"noUnusedVariables": {
					"level": "error",
					"options": {
						"ignoreRestSiblings": true
					}
				}
			}
		}
	},
	"files": {
		"includes": ["**", "!**/node_modules", "!**/dist", "!**/.vscode", "!**/.vite", "!**/*.js"]
	}
}
